<view class="wrapper">
  <view class="loginform">
  <form bindsubmit="formSubmit">
    <view id="owl-login">
      <image class="head" src="../../images/owl-login.png"></image>
      <view class="hand {{inputPassword ? 'hand-password' : ''}}"></view>
      <view class="hand hand-r {{inputPassword ? 'hand-r-password' : ''}}"></view>
      <view class="arms">
        <image class="arm {{inputPassword ? 'arm-password' : ''}}" src="../../images/owl-login-arm.png"></image>
        <image class="arm arm-r {{inputPassword ? 'arm-r-password' : ''}}" src="../../images/owl-login-arm.png"></image>
      </view>
    </view>
    <view class="control-group">
      <view class="control">
        <input type="number" name='username'  placeholder="学号" placeholder-style="color:white" ></input>
      </view>
      <view class="control">
        <input type="password" name='password'  bindfocus="pwdFocus" bindblur="pwdBlur" placeholder="密码"  placeholder-style="color:white"></input>
      </view>
      <button disabled="{{isLoading}}" loading="{{isLoading}}" type="primary"  form-type="submit">登录</button>
    </view>
    </form>
  </view>
</view>
